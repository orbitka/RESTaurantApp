<p id="notice"><%= notice %></p>
<h1>All Bills</h1>
<table class="table_with_borders">
  <thead>
    <tr>
      <th>Bill No.</th>
      <th>Table ID</th>
      <th>Waiter ID</th>
      <th>Paid</th>
      <th>Tip</th>
      <th>Created</th>

      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @bills.each do |bill| %>
      <tr>
        <td><%= bill.id %></td>
        <td><%= link_to bill.tablename_id, tablename_path(bill.tablename_id) %></td>
        <td><%= link_to bill.user_id, user_path(bill.user_id) %></td>
        <td><%= bill.paid %></td>
        <td><%= bill.tip %></td>
        <td><%= bill.created_at %></td>
        <td><%= link_to 'Show', bill %></td>
        <td><%= link_to 'Edit', edit_bill_path(bill) %></td>
        <td><%= link_to 'Delete', bill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

