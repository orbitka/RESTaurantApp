<p id="notice"><%= notice %></p>

<h1>All Bills</h1>

<table>
  <thead>
    <tr>
      <th>Bill</th>
      <th>Table</th>
      <th>Waiter</th>
      <th>Paid</th>
      <th>Tip</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bills.each do |bill| %>
      <tr>
        <td><%= bill.order_id %></td>
        <td><%= bill.tablename.name %></td>
        <td><%= bill.user_id %></td>
        <td><%= bill.paid %></td>
        <td><%= bill.tip %></td>
        <td><%= link_to 'Show', bill %></td>
        <td><%= link_to 'Edit', edit_bill_path(bill) %></td>
        <td><%= link_to 'Destroy', bill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

